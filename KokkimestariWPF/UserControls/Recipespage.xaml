<UserControl x:Class="KokkimestariWPF.UserControls.Recipespage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KokkimestariWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Omat reseptit" HorizontalAlignment="Center" FontSize="14.667"/>
            <ListBox x:Name="listBox" ItemsSource="{Binding}" DisplayMemberPath="Name" Height="250" Width="350" Margin="20,0" FontSize="14.667" SelectionChanged="listBox_SelectionChanged"/>
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Hae nimellä" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" HorizontalAlignment="Center" Width="350" TextChanged="textBox_TextChanged"/>
        </StackPanel>
    </Grid>
</UserControl>
